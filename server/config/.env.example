# Server
PORT=8080

# Database (SQLite file path; swap to postgres:// when needed)
DATABASE_URL=./data.db

# Nginx config directory (shared volume with reverse-proxy)
NGINX_CONFIG_DIR=/etc/nginx/sites-enabled

# Storage (S3-compatible; set endpoint, keys, and SSL flag for your backend)
STORAGE_ENDPOINT=http://storage:3900
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_USE_SSL=false

# Builder discovery (comma-separated URLs)
BUILDER_ENDPOINTS=http://builder:8080

# Auth
SESSION_TTL_HOURS=24

# Initial bootstrap user (only used if no users exist in DB)
INITIAL_USER=admin
INITIAL_PASSWORD=changeme
